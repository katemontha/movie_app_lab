<h2>Edit Artist</h2>

<%= form_for @film do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :synopsis %>
  <%= f.text_field :synopsis %>

  <%= f.label :picture %>
  <%= f.text_field :picture %>

  <%= f.submit %>
<% end %>

<%= form_for @film, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
